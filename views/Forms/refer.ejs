<%- contentFor('HeaderCss') %>
<link rel="stylesheet" href="public/assets/plugins/jquery-steps/jquery.steps.css">

<%- contentFor('breadcrumb') %>
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="btn-group pull-right">
                 <ol class="breadcrumb hide-phone p-0 m-0">
                    <li class="breadcrumb-item"><a href="#">Upload</a></li>
                    <li class="breadcrumb-item active">CSV</li>
                </ol>
            </div>
            <h4 class="page-title">Upload Mass Contacts</h4>
        </div>
    </div>
</div>

<%- contentFor('body') %>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card m-b-20">
                            <div class="card-body">

                                <h4 class="mt-0 header-title">Upload a list of contacts</h4>
                                <p class="text-muted m-b-30 font-14">Upload a .CSV File with the headers shown in this example file</p>

                                <form id="form-horizontal" class="form-horizontal form-wizard-wrapper">
                                    <h3>Upload CSV File</h3>
                                    <fieldset>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                    <label for="listName" class="col-lg-3 col-form-label">Name of list</label>

                                                    <div class="col-lg-9">
                                                        <input id="txtFirstNameBilling" name="txtFirstNameBilling" type="text" class="form-control">
                                                    </div>
                                                        <div>
    <button type="button" class="btn btn-primary btn-lg btn-block waves-effect waves-light">Upload</button>

                                                    </div>
                                                </div>
                                            </div>

                                    </fieldset>
                                    <h3>Review</h3>
                                    <fieldset>
                                      <table id="mainTable" class="table table-striped m-b-0">
                                          <thead>
                                          <tr>
                                              <th>Name</th>
                                              <th>Email</th>
                                              <th>Mobile</th>
                                              <th>SMS Opt In</th>
                                          </tr>
                                          </thead>
                                          <tbody>
                                          <tr>
                                              <td>Full_Name</td>
                                              <td>Email_Main</td>
                                              <td>Phone_Mobile</td>
                                              <td>Has_Opt_In</td>
                                          </tr>
                                          </tbody>
                                          <tfoot>
                                          <tr>
                                              <th><strong>Click Next if the above fields have correctly mapped. If not please re-edit headers and re-upload</strong></th>
                                              <th></th>
                                              <th></th>
                                              <th></th>
                                          </tr>
                                          </tfoot>
                                      </table>

                                    </fieldset>
                                    <h3>Confirm Upload</h3>
                                    <fieldset>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                    <label for="txtNameCard" class="col-lg-3 col-form-label">0 Duplicates Found. Upload will create 113 new contacts</label>
                                                </div>
                                            </div>
                                    </fieldset>
                                    <h3>Upload Results</h3>
                                    <fieldset>
                                        <div class="p-3">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="customCheck1">
                                                <label class="custom-control-label" for="customCheck1">Add 113 new contacts</label>
                                            </div>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

<%- contentFor('FooterJs') %>
<script src="public/assets/plugins/jquery-steps/jquery.steps.min.js"></script>

<%- contentFor('BottomJs') %>
<script>
    $(function ()
    {
        $("#form-horizontal").steps({
            headerTag: "h3",
            bodyTag: "fieldset",
            transitionEffect: "slide"
        });
    });
</script>
